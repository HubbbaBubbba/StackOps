<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Search Test</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/styles/search.css" />
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 mb-3">
        <input type="text" id="myFilter" class="form-control" onkeyup="myFunction()" placeholder="Search for names.." />
      </div>
    </div>
    <div class="row" id="myItems">
      <div class="col-sm-12 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><a href="#">CIS 476 - Software Architecture</a></h5>
            <h6 class="card-subtitle mb-2 text-muted">PHP and Java</h6>
            <p class="card-text">0</p>
          </div>
        </div>

        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><a href="#">CS 135 - Computer Skills for Problem-Solving
            </a></h5>
            <h6 class="card-subtitle mb-2 text-muted">Python</h6>
            <p class="card-text">0</p>
          </div>
        </div>

        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><a href="#">CIS 376 - Web Development</a></h5>
            <h6 class="card-subtitle mb-2 text-muted">HTML, CSS, JavaScript</h6>
            <p class="card-text">0</p>
          </div>
        </div>

        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><a href="#">CIS 225 - Introduction to Object-Oriented Programming</a></h5>
            <h6 class="card-subtitle mb-2 text-muted">Python</h6>
            <p class="card-text">0</p>
          </div>
        </div>

        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><a href="#">CIS 315 Advanced Object-Oriented Programming
            </a></h5>
            <h6 class="card-subtitle mb-2 text-muted">Java</h6>
            <p class="card-text">0</p>
          </div>
        </div>

        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><a href="#">CIS 344 - IT Infrastructure
            </a></h5>
            <h6 class="card-subtitle mb-2 text-muted">MySQL</h6>
            <p class="card-text">0</p>
          </div>
        </div>
        
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><a href="#">CIS 444 - Advanced IT Infrastructure
            </a></h5>
            <h6 class="card-subtitle mb-2 text-muted">MySQL</h6>
            <p class="card-text">0</p>
          </div>
        </div>

        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><a href="#">CIS 486 - Projects in Information Systems
            </a></h5>
            <h6 class="card-subtitle mb-2 text-muted">HTML, CSS, JS, nodeJS, RESTful API, EJS</h6>
            <p class="card-text">0</p>
          </div>
        </div>
        
      </div>
    </div>
  </div>
  <script>
    function myFunction() {
      var input, filter, cards, cardContainer, h5, title, i;
      input = document.getElementById("myFilter");
      filter = input.value.toUpperCase();
      cardContainer = document.getElementById("myItems");
      cards = cardContainer.getElementsByClassName("card");
      for (i = 0; i < cards.length; i++) {
        title = cards[i].querySelector(".card-body h6.card-subtitle");
        if (title.innerText.toUpperCase().indexOf(filter) > -1) {
          cards[i].style.display = "";
        } else {
          cards[i].style.display = "none";
        }
      }
    }
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
</body>

</html>